<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>without bootstrap</title>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
  </head>
  <body>
    <div>
      <form action="/post/create" method="POST">
        <div class="form-group">
          <label for="tittle">Tiêu đề bài viết: </label>
          <input type="text" class="form-control" id="tittle" placeholder="Nhập tiêu đề bài viết..." name="tittle">
        </div>

        <div class="form-group">
          <label for="summary">Tóm tắt bài viết</label>
          <input type="text" class="form-control" id="summary" placeholder="Nội dung tóm tắt..." name="summary">
        </div>

        <textarea id="summernote" name="content"></textarea>
        <button type="submit" class="btn btn-primary">Đăng</button>
      </form>
    </div>
    <script>
      $('#summernote').summernote({
        placeholder: 'Nội dung bài viết',
        tabsize: 2,
        height: 500,
        toolbar: [
          ['style', ['style']],
          ['font', ['bold', 'underline', 'clear']],
          ['color', ['color']],
          ['para', ['ul', 'ol', 'paragraph']],
          ['table', ['table']],
          ['insert', ['link', 'picture', 'video']],
          ['view', ['fullscreen', 'codeview', 'help']]
        ]
      });
    </script>
  </body>
</html>