            <div class="container">
                <h1>Đây là trang bài viết</h1>
                <!-- Nút thêm bài viết -->
                <div>
                    <!--HIỂN THỊ TẤT CẢ BÀI VIẾT-->
                    <div class="table-dht">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">
                                        <h3>STT</h3>
                                    </th>
                                    <th scope="col">
                                        <h3>Tittle</h3>
                                    </th>
                                    <th scope="col">
                                        <h3>Người viết</h3>
                                    </th>
                                    <th scope="col">
                                        <h3>Tùy chọn</h3>
                                    </th>
                                </tr>
                            </thead>



                            <tbody>
                                <!--EJS-->
                                <tr>
                                    <% for(var i=0;i < posts.length; i++) { %>
                                        <th scope="row">
                                            <h5>
                                                <%= i+1 %>
                                            </h5>
                                        </th>
                                        <td>
                                            <%= posts[i].tittle %>
                                        </td>
                                        <td>
                                        </td>
                                        <td>
                                            <a href="/post/search/<%=posts[i].id %>">
                                                <button type="button" class="btn btn-primary">
                                                    <p class="btn-delete-label">Xem</p>
                                                </button>
                                            </a>

                                            <button type="button" class="btn btn-secondary btn-edit-post"
                                                value=<%=posts[i].id%> >
                                                <p class="btn-delete-label">Sửa</p>
                                            </button>

                                            <a href="/post/remove/<%=posts[i].id %>">
                                                <button type="button" class="btn btn-danger">
                                                    <p class="btn-delete-label">Xóa</p>
                                                </button>
                                            </a>

                                        </td>
                                </tr>
                                <%}%>
                                    <!--END-->

                            </tbody>
                        </table>
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" hidden
                            id="btn-enable-modal">
                            Hiển thị Modal
                        </button>
                    </div>
                    <!--END HIEN THI TAT CA BAI VIET-->

                </div>
            </div>

        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Viết bài mới</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <%- include('text-editor.ejs') %>
                </div>
            </div>
        </div>
    </div>

