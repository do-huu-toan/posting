    <script type="text/javascript">
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
                $(this).toggleClass('active');
            });
        });
    </script>


    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script type="text/javascript">
        const btnEditPost = document.getElementsByClassName('btn-edit-post');
        for (let i = 0; i < btnEditPost.length; i++) {
            btnEditPost[i].onclick = async function (e) {
                const url = '/post/api/' + this.value;
                try {
                    result = await axios.get(url);
                    if (result) {

                        const form = document.getElementById("form");

                        form.action = "/post/update/" + this.value;

                        console.log(form.action);

                        const txt_tittlePost = document.getElementById("tittle");
                        txt_tittlePost.value = result.data.tittle;

                        const txt_summary = document.getElementById("summary");
                        txt_summary.value = result.data.summary;

                        $("#summernote").summernote("code", result.data.content);
                        $('#btn-enable-modal').click();

                    }
                }
                catch (err) {
                    alert("Không load được bài viết")
                }

            }
        }
    </script>

